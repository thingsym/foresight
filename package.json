{
  "name": "ace",
  "version": "1.0.0",
  "description": "",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "author": "",
  "license": "GPL2 or later",
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.5.0",
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^1.2.2",
    "eslint": "^6.0.1",
    "flexbox-grid-mixins": "^0.1.6",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rtlcss": "^2.4.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.9.1",
    "stylestats": "^7.0.2",
    "uglify-es": "^3.3.9"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-scss",
      "stylelint-config-recommended-scss"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "jQuery": true,
      "$": false,
      "wp": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {}
  },
  "scripts": {
    "setup": "bash bin/setup.sh",
    "makepot": "php /usr/local/share/wp-i18n/makepot.php wp-theme ../ace ../ace/languages/ace.pot",
    "msgfmt:ja": "msgfmt languages/ja.po -o languages/ja.mo",
    "msgfmt": "run-p \"msgfmt:*\"",
    "sass:style": "node-sass src/scss/style.scss css/style.css --output-style expanded && postcss --use autoprefixer --no-map -r css/style.css",
    "sass:style:minify": "node-sass src/scss/style.scss css/style.min.css --output-style compressed && postcss --use autoprefixer --no-map -r css/style.min.css",
    "sass:block-editor": "node-sass src/scss/block-editor-style.scss css/block-editor-style.css --output-style expanded && postcss --use autoprefixer --no-map -r css/block-editor-style.css",
    "rtlcss:rtl": "rtlcss css/style.css css/style-rtl.css",
    "minify:js": "uglifyjs js/customizer.js -o js/customizer.min.js & uglifyjs js/navigation.js -o js/navigation.min.js & uglifyjs js/skip-link-focus-fix.js -o js/skip-link-focus-fix.min.js & uglifyjs js/toggle-menu.js -o js/toggle-menu.min.js",
    "build:css": "run-p \"sass:**\" \"rtlcss:rtl\"",
    "build:js": "run-p \"minify:js\"",
    "build": "run-p \"build:*\"",
    "lint:css": "stylelint \"css/*.css\" \"css/**/*.css\"",
    "lint:scss": "stylelint \"src/scss/*.scss\" \"src/scss/**/*.scss\"",
    "lint:es": "eslint js/*.js",
    "lint": "run-p \"lint:*\"",
    "stats:css": "stylestats css/style.min.css & stylestats css/style-rtl.css & stylestats css/block-editor-style.css",
    "bs:server": "browser-sync start --server",
    "bs:server:watch": "browser-sync start --server --files \"css/*.min.css\" \"js/*.min.js\"",
    "bs:proxy:": "browser-sync start --proxy \"gutenberg.local\" --https",
    "bs:proxy:watch": "browser-sync start --proxy \"gutenberg.local\" --https --files \"css/*.min.css\" \"js/*.min.js\"",
    "watch:css": "chokidar \"src/scss/*.scss\" \"src/scss/**/*.scss\" -c \"npm run build:css\" --initial --polling",
    "watch:js": "chokidar \"js/*.js\" \"!js/*.min.js\" -c \"npm run build:js\" --initial --polling",
    "watch": "run-p \"watch:*\"",
    "server": "run-p \"watch\" \"bs:proxy:watch\""
  },
  "dependencies": {}
}
